<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <!-- ============================== -->
        <!-- PARTE VISIBLE (RESUMEN) -->
        <!-- ============================== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ID de la Cita (Estilo Chip) -->
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cita #1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue_500"
                android:background="@drawable/bg_chip_light"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Estado (Estilo Chip) -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmada"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue_700"
                android:background="@drawable/bg_chip_status"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Nombre del Médico -->
            <TextView
                android:id="@+id/tv_medico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Médico 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue_900"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ib_expand"/>

            <!-- Contenedor Fecha y Hora -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_medico"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ib_expand">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <!-- Icono calendario nativo -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/dark_blue_400"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tv_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atención el 12/05/2023"
                        android:textColor="@color/dark_blue_800"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Icono reloj nativo -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/dark_blue_400"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tv_hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9:30 AM"
                        android:textColor="@color/dark_blue_800"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Expandir (Flecha) -->
            <ImageButton
                android:id="@+id/ib_expand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/dark_blue_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_status"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ============================== -->
        <!-- PARTE OCULTA (DETALLES) -->
        <!-- ============================== -->
        <LinearLayout
            android:id="@+id/linear_layout_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@color/dark_blue_50"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Especialidad -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Especialidad"
                        android:textSize="11sp"
                        android:textColor="@color/dark_blue_400"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/tv_especilidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiología"
                        android:textColor="@color/dark_blue_900"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Tipo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        android:textSize="11sp"
                        android:textColor="@color/dark_blue_400"
                        android:textAllCaps="true"/>
                    <TextView
                        android:id="@+id/tv_tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consulta"
                        android:textColor="@color/dark_blue_900"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_blue_200"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_creado_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark_blue_500"
                android:layout_marginBottom="4dp"
                android:text="Registrado el 28/03/2023"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Síntomas / Descripción:"
                android:textStyle="bold"
                android:textColor="@color/dark_blue_700"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dolor en el pecho constante..."
                android:textColor="@color/black"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>