<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark_blue"
    tools:context=".ui.CreateAppointmentActivity">

    <!-- Encabezado Fijo -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Cita"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete los pasos a continuación"
            android:textColor="@color/dark_blue_200"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Contenido Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">

            <!-- ========================================== -->
            <!-- TARJETA 1: DATOS INICIALES (cv_siguiente) -->
            <!-- ========================================== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_siguiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paso 1: Descripción"
                        android:textColor="@color/dark_blue_800"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Síntomas"
                        android:textColor="@color/dark_blue_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_dark_blue"
                        android:padding="16dp"
                        android:hint="Describa brevemente cómo se siente..."
                        android:textColor="@color/dark_blue_950"
                        android:textSize="14sp"
                        android:minHeight="100dp"
                        android:gravity="top|start"
                        android:layout_marginBottom="16dp"/>

                    <!-- Especialidad -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Especialidad"
                        android:textColor="@color/dark_blue_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <Spinner
                        android:id="@+id/spinner_especialidades"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_dark_blue"
                        android:paddingStart="8dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Tipo de Consulta -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Servicio"
                        android:textColor="@color/dark_blue_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/radio_group_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <RadioButton
                            android:id="@+id/radio_consulta"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            android:text="Consulta"
                            android:button="@null"
                            android:gravity="center"
                            android:background="@drawable/selector_radio_modern"
                            android:textColor="@color/text_radio_modern"
                            android:layout_marginEnd="4dp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radio_examen"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="45dp"
                            android:text="Examen"
                            android:button="@null"
                            android:gravity="center"
                            android:background="@drawable/selector_radio_modern"
                            android:textColor="@color/text_radio_modern"
                            android:layout_marginStart="4dp"/>
                    </RadioGroup>

                    <Button
                        android:id="@+id/btn_siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Siguiente"
                        android:backgroundTint="@color/dark_blue_600"
                        app:cornerRadius="12dp"
                        android:drawableEnd="@drawable/ic_next"
                        android:drawableTint="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========================================== -->
            <!-- TARJETA 2: FECHA Y HORA (cv_confirmar) -->
            <!-- ========================================== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_confirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paso 2: Agenda"
                        android:textColor="@color/dark_blue_800"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Médico -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccione Médico"
                        android:textColor="@color/dark_blue_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <Spinner
                        android:id="@+id/spinner_medico"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_dark_blue"
                        android:layout_marginBottom="16dp"/>

                    <!-- Fecha -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de la Cita"
                        android:textColor="@color/dark_blue_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/et_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_dark_blue"
                        android:padding="16dp"
                        android:hint="Seleccionar fecha..."
                        android:drawableEnd="@drawable/ic_calendar_modern"
                        android:drawableTint="@color/dark_blue_500"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="date"
                        android:layout_marginBottom="16dp"
                        android:onClick="onClickScheduledDate"/>

                    <!-- =============================================== -->
                    <!-- MENSAJES AGREGADOS PARA CORREGIR EL ERROR -->
                    <!-- =============================================== -->
                    <TextView
                        android:id="@+id/tv_seleccionar_medico_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccione un médico y una fecha para ver los horarios."
                        android:textColor="@color/dark_blue_400"
                        android:layout_marginBottom="12dp"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_horas_disponibles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay horas disponibles para esta fecha."
                        android:textColor="#D32F2F"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>
                    <!-- =============================================== -->

                    <!-- Hora -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horario Disponible"
                        android:textColor="@color/dark_blue_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Contenedor de Horas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:id="@+id/radio_group_izq"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:id="@+id/radio_group_der"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_siguiente_dos"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Verificar Datos"
                        android:backgroundTint="@color/dark_blue_600"
                        app:cornerRadius="12dp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========================================== -->
            <!-- TARJETA 3: RESUMEN (cv_resumen) -->
            <!-- ========================================== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_resumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/dark_blue_50"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar Datos"
                        android:textColor="@color/dark_blue_900"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"/>

                    <!-- Resumen Médico -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_input_dark_blue"
                        android:backgroundTint="@color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Médico &amp; Especialidad"
                            android:textSize="12sp"
                            android:textColor="@color/dark_blue_400"/>
                        <TextView
                            android:id="@+id/tv_resumen_medico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Nombre"
                            android:textStyle="bold"
                            android:textColor="@color/dark_blue_900"/>
                        <TextView
                            android:id="@+id/tv_resumen_especialidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardiología"
                            android:textSize="13sp"
                            android:textColor="@color/dark_blue_700"/>
                    </LinearLayout>

                    <!-- Resumen Fecha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_input_dark_blue"
                        android:backgroundTint="@color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha"
                                android:textSize="12sp"
                                android:textColor="@color/dark_blue_400"/>
                            <TextView
                                android:id="@+id/tv_resumen_fecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12/12/2024"
                                android:textStyle="bold"
                                android:textColor="@color/dark_blue_900"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hora"
                                android:textSize="12sp"
                                android:textColor="@color/dark_blue_400"/>
                            <TextView
                                android:id="@+id/tv_resumen_hora"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10:00 AM"
                                android:textStyle="bold"
                                android:textColor="@color/dark_blue_900"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Resumen Tipo y Síntomas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_input_dark_blue"
                        android:backgroundTint="@color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/tv_resumen_tipoConsulta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consulta General"
                            android:textColor="@color/dark_blue_600"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Síntomas:"
                            android:textSize="12sp"
                            android:textColor="@color/dark_blue_400"/>
                        <TextView
                            android:id="@+id/tv_resumen_sintomas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción de síntomas..."
                            android:textColor="@color/dark_blue_800"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_confirmar"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Confirmar Cita"
                        android:backgroundTint="@color/dark_blue_500"
                        app:cornerRadius="12dp"
                        android:drawableEnd="@drawable/ic_logout_modern"
                        android:drawableTint="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>